---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components';

const products = [
	{
		icon: "",
		name: "Producto 1",
	},
	{
		icon: "",
		name: "Producto 2",
	},
	{
		icon: "",
		name: "Producto 3",
	},
];
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-800">
			<div class="container flex items-center">
				<img class="h-[61px]" src="/public/Aliexpress.webp" alt="" srcset="" />
				<div class="relative">
				<input placeholder="Buscar..." class="h-9 rounded-full pl-5 outline-none pr-14 		">
				<div class="bg-zinc-800 absolute right-1 top-[2px] inline-block text-white rounded-2xl py-1 px-2">
					<Icon name="mdi:search" class="size-6" />
				</div>
			</div>
			<div class="text-white text-xs flex px-2">
				<div class="px-1">
					<Icon name="mdi:qrcode-scan" class="size-8 inline-block items-center"/>
				</div>
			 	<div class="inline-block px-2">
				<p>descarga la app <br> de Aliexpress</p>	
				</div>

				<div class="px-1">
					<Icon name="flagpack:co" class="size-6 inline-block items-center"/>
				</div>
				<div class="inline-block px-1">	
				<p>ES/</p>
				<p class="font-extrabold">COP</p>	
				</div> 

				<div class="">
					<Icon name="mdi:user-outline" class="size-8 inline-block items-center"/>
				</div>
				<div class="inline-block px-1">	
				<p>¡Bienvenido <br>
					Identifícate / Regístrate!</p>	
				</div> 
				<div class="">
					<Icon name="mdi:cart" class="size-7 inline-block items-center"/>
				</div>
				<div class="inline-block px-1 text-sm">	
				<p>Cesta<p>	
				</div>
			</div>
			</div>
		</div>
		<div class="container banner">BANNER</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>
			<a href="/products">Products</a>
		</nav>
		<div class="container products_list">
			{
				products.map((product) => (
					<div>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"
						>
							<>
								<path d="M12 2C7.51 2 4 4.2 4 7v10c0 2.8 3.51 5 8 5s8-2.2 8-5V7c0-2.8-3.51-5-8-5zm0 18c-3.54 0-6-1.58-6-3v-6.67A10.52 10.52 0 0 0 12 12a10.52 10.52 0 0 0 6-1.67V17c0 1.42-2.46 3-6 3zm0-10c-3.54 0-6-1.58-6-3s2.46-3 6-3 6 1.58 6 3-2.46 3-6 3z" />
								<ellipse cx="12" cy="7" rx="3" ry="1.71" />
							</>
						</svg>
						{product.name}
					</div>
				))
			}
		</div>
		<div class="container products_categories">categories</div>
		<div class="container">
			<slot />
		</div>
		<div class="container footer">Footer</div>
	</body>
</html>
<style is:global>
	.main_menu {
		display: flex;
		height: 40px;
		background-color: #f18805;
	}

	.main_menu a {
		height: 100%;
		text-decoration: none;
		align-items: center;
		display: flex;
		padding: 0 12px;
		color: #fff;
		transition: background 300ms ease-in-out;
	}

	.main_menu a:hover {
		background-color: #f0a202;
	}

	.products_categories {
		height: 50px;
	}

	.products_list {
		display: flex;
		height: 80px;
		padding: 5px;
	}

	.products_list div {
		height: 100%;
		display: flex;
		max-width: 120px;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid gray;
		border-radius: 4px;
		margin-right: 3px;
	}

	.footer {
		height: 60px;
	}

	.banner {
		height: 240px;
	}

	html,
	body {
		font-family: system-ui, sans-serif;
		padding: 0;
		margin: 0;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
